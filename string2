        {
            string name;
            string s = ",";
            StringBuilder k = new StringBuilder();

            Console.WriteLine("ENTER THE NAME");
            k.Append(Console.ReadLine());
            k.Append(",");

            Console.WriteLine("ENTER THE EMPnO");
            k.Append(Console.ReadLine());
